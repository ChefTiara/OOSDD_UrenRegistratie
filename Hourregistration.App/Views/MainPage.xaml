<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Hourregistration.App.Views.MainPage"
             xmlns:ContentView="clr-namespace:Hourregistration.App.Views"
             Title="MainPage">
    <ContentPage.MenuBarItems>
        <MenuBarItem Text="Pages">
            <MenuFlyoutItem Text="Page1"
                 Clicked="OnPage1Clicked"/>
        </MenuBarItem>
    </ContentPage.MenuBarItems>
    <VerticalStackLayout>
        <ContentView:Header/>
        <ContentView x:Name="Subpage"/>
        <ContentView:Footer/>
    </VerticalStackLayout>
</ContentPage>