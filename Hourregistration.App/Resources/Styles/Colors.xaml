<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- ==== LIGHT MODE ==== -->
    <Color x:Key="Primary">#0B1E3F</Color>
    <!-- Prussian Blue -->
    <Color x:Key="Secondary">#3A5A7A</Color>
    <!-- Baltic Blue -->
    <Color x:Key="Tertiary">#F0F4FA</Color>
    <!-- Alice Blue -->

    <!-- Semantic surfaces -->
    <Color x:Key="Surface">#FFFFFF</Color>
    <Color x:Key="OnSurface">#000000</Color>

    <!-- ==== DARK MODE ==== -->
    <Color x:Key="PrimaryDark">#415D8E</Color>
    <!-- Dusk Blue -->
    <Color x:Key="SecondaryDark">#9AB1C8</Color>
    <!-- Powder Blue -->
    <Color x:Key="TertiaryDark">#F0F4FA</Color>

    <!-- Dark surfaces -->
    <Color x:Key="SurfaceDark">#0B1E3F</Color>
    <Color x:Key="OnSurfaceDark">#FFFFFF</Color>

    <!-- BRUSHES -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}" />
    <SolidColorBrush x:Key="SecondaryBrush" Color="{AppThemeBinding Light={StaticResource Secondary}, Dark={StaticResource SecondaryDark}}" />
    <SolidColorBrush x:Key="TertiaryBrush" Color="{AppThemeBinding Light={StaticResource Tertiary}, Dark={StaticResource TertiaryDark}}" />
    <SolidColorBrush x:Key="SurfaceBrush" Color="{AppThemeBinding Light={StaticResource Surface}, Dark={StaticResource SurfaceDark}}" />
    <SolidColorBrush x:Key="OnSurfaceBrush" Color="{AppThemeBinding Light={StaticResource OnSurface}, Dark={StaticResource OnSurfaceDark}}" />

</ResourceDictionary>