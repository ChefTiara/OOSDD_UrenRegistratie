<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Hourregistration.App.Views.UrenbeoordelingPage"
             x:Name="PageRoot"
             Title="Urenbeoordeling">

    <ContentPage.Content>
        <ScrollView>
            <VerticalStackLayout Padding="12,16" Spacing="12">

                <Label Text="Te beoordelen uren"
                       FontSize="18"
                       FontAttributes="Bold" />

                <!-- Pending header -->
                <Grid ColumnDefinitions="2*,2*,2*,Auto,Auto,Auto"
                      Padding="8,4"
                      BackgroundColor="#1f1f1f">
                    <Label Text="Medewerker" FontAttributes="Bold" />
                    <Label Text="Periode" Grid.Column="1" FontAttributes="Bold" />
                    <Label Text="Project" Grid.Column="2" FontAttributes="Bold" />
                    <Label Text="Totaal uren" Grid.Column="3" FontAttributes="Bold" />
                    <Label Text="Ingediend op" Grid.Column="4" FontAttributes="Bold" />
                    <Label Text="Actie" Grid.Column="5" FontAttributes="Bold" />
                </Grid>

                <CollectionView ItemsSource="{Binding PendingDeclarations}"
                                SelectionMode="None">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame Padding="10" BorderColor="#222" Margin="0,4" CornerRadius="6">
                                <Grid ColumnDefinitions="2*,2*,2*,Auto,Auto,Auto"
                                      RowDefinitions="Auto">
                                    <Label Text="{Binding EmployeeName}"
                                           FontAttributes="Bold"
                                           VerticalOptions="Center" />
                                    <Label Grid.Column="1"
                                           Text="{Binding Date, StringFormat='{0:dd/MM/yyyy}'}"
                                           VerticalOptions="Center" />
                                    <Label Grid.Column="2"
                                           Text="{Binding ProjectName}"
                                           VerticalOptions="Center" />
                                    <Label Grid.Column="3"
                                           Text="{Binding WorkedHours, StringFormat='{0:0.#} uur'}"
                                           VerticalOptions="Center" />
                                    <Label Grid.Column="4"
                                           Text="{Binding SubmittedOn, StringFormat='{0:dd/MM/yyyy}'}"
                                           VerticalOptions="Center" />
                                    <StackLayout Grid.Column="5"
                                                 Orientation="Horizontal"
                                                 Spacing="6"
                                                 HorizontalOptions="End"
                                                 VerticalOptions="Center">
                                        <Button Text="✕"
                                                WidthRequest="40"
                                                HeightRequest="40"
                                                Command="{Binding BindingContext.RejectCommand, Source={x:Reference PageRoot}}"
                                                CommandParameter="{Binding .}" />
                                        <Button Text="✓"
                                                WidthRequest="40"
                                                HeightRequest="40"
                                                Command="{Binding BindingContext.ApproveCommand, Source={x:Reference PageRoot}}"
                                                CommandParameter="{Binding .}" />
                                    </StackLayout>

                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

                <Label Text="Reeds beoordeelde registraties"
                       FontSize="16"
                       FontAttributes="Bold"
                       Margin="0,16,0,0" />

                <CollectionView ItemsSource="{Binding ReviewedDeclarations}"
                                SelectionMode="None">
                    <CollectionView.Header>
                        <Grid ColumnDefinitions="2*,2*,2*,Auto,Auto,Auto"
                              Padding="8,4"
                              BackgroundColor="#1f1f1f">
                            <Label Text="Medewerker" FontAttributes="Bold" />
                            <Label Text="Periode" Grid.Column="1" FontAttributes="Bold" />
                            <Label Text="Project" Grid.Column="2" FontAttributes="Bold" />
                            <Label Text="Totaal uren" Grid.Column="3" FontAttributes="Bold" />
                            <Label Text="Ingediend op" Grid.Column="4" FontAttributes="Bold" />
                            <Label Text="Gekeurd op / Status" Grid.Column="5" FontAttributes="Bold" />
                        </Grid>
                    </CollectionView.Header>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame Padding="10" BorderColor="#222" Margin="0,4" CornerRadius="6">
                                <Grid ColumnDefinitions="2*,2*,2*,Auto,Auto,Auto"
                                      RowDefinitions="Auto">
                                    <Label Text="{Binding EmployeeName}"
                                           FontAttributes="Bold"
                                           VerticalOptions="Center" />
                                    <Label Grid.Column="1"
                                           Text="{Binding Date, StringFormat='{0:dd/MM/yyyy}'}"
                                           VerticalOptions="Center" />
                                    <Label Grid.Column="2"
                                           Text="{Binding ProjectName}"
                                           VerticalOptions="Center" />
                                    <Label Grid.Column="3"
                                           Text="{Binding WorkedHours, StringFormat='{0:0.#} uur'}"
                                           VerticalOptions="Center" />
                                    <Label Grid.Column="4"
                                           Text="{Binding SubmittedOn, StringFormat='{0:dd/MM/yyyy}'}"
                                           VerticalOptions="Center" />
                                    <StackLayout Grid.Column="5"
                                                 Orientation="Vertical"
                                                 Spacing="2"
                                                 VerticalOptions="Center">
                                        <Label Text="{Binding ReviewedOn, StringFormat='{0:dd/MM/yyyy}'}"
                                               FontSize="12"
                                               TextColor="Gray"
                                               HorizontalOptions="End" />
                                        <Label Text="{Binding State}"
                                               HorizontalOptions="End" />
                                    </StackLayout>
                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

            </VerticalStackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
