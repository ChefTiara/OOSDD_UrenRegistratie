<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- ========================================================= -->
    <!--  FLAT, PROFESSIONAL, NON-SHINY UI STYLES                  -->
    <!-- ========================================================= -->

    <!-- ActivityIndicator -->
    <Style TargetType="ActivityIndicator">
        <Setter Property="Color" Value="{StaticResource PrimaryBrush}" />
    </Style>

    <!-- Border -->
    <Style TargetType="Border">
        <Setter Property="Stroke" Value="{StaticResource SecondaryBrush}" />
        <Setter Property="StrokeThickness" Value="1" />
        <Setter Property="StrokeShape" Value="Rectangle"/>
    </Style>

    <!-- BoxView -->
    <Style TargetType="BoxView">
        <Setter Property="BackgroundColor" Value="{StaticResource PrimaryBrush}" />
    </Style>

    <!-- Button -->
    <Style TargetType="Button">
        <Setter Property="TextColor" Value="{StaticResource TertiaryBrush}" />
        <Setter Property="BackgroundColor" Value="{StaticResource PrimaryBrush}" />
        <Setter Property="FontFamily" Value="OpenSansRegular" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="CornerRadius" Value="6" />
        <Setter Property="Padding" Value="14,10" />
        <Setter Property="MinimumHeightRequest" Value="45" />
        <Setter Property="MinimumWidthRequest" Value="44" />

        <!-- Remove shine, hover, glow, pointerover -->
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup>
                    <VisualState x:Name="Normal" />

                    <VisualState x:Name="Disabled">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="{StaticResource SecondaryBrush}" />
                            <Setter Property="TextColor" Value="{StaticResource OnSurfaceBrush}" />
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

    <!-- CheckBox -->
    <Style TargetType="CheckBox">
        <Setter Property="Color" Value="{StaticResource PrimaryBrush}" />
    </Style>

    <!-- DatePicker -->
    <Style TargetType="DatePicker">
        <Setter Property="TextColor" Value="{StaticResource OnSurfaceBrush}" />
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="FontFamily" Value="OpenSansRegular" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="MinimumHeightRequest" Value="44" />
    </Style>

    <!-- Editor -->
    <Style TargetType="Editor">
        <Setter Property="TextColor" Value="{StaticResource OnSurfaceBrush}" />
        <Setter Property="BackgroundColor" Value="{StaticResource SurfaceBrush}"/>
        <Setter Property="PlaceholderColor" Value="{StaticResource SecondaryBrush}" />
        <Setter Property="FontSize" Value="14" />
    </Style>

    <!-- Entry -->
    <Style TargetType="Entry">
        <Setter Property="TextColor" Value="{StaticResource OnSurfaceBrush}" />
        <Setter Property="BackgroundColor" Value="{StaticResource SurfaceBrush}" />
        <Setter Property="PlaceholderColor" Value="{StaticResource SecondaryBrush}" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="HeightRequest" Value="44"/>

        <!-- Remove MAUI's default pink focus underline -->
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup>
                    <VisualState x:Name="Focused">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="{StaticResource SurfaceBrush}" />
                        </VisualState.Setters>
                    </VisualState>

                    <VisualState x:Name="Normal" />
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

    <!-- Frame -->
    <Style TargetType="Frame">
        <Setter Property="HasShadow" Value="False" />
        <Setter Property="CornerRadius" Value="6" />
        <Setter Property="BorderColor" Value="{StaticResource SecondaryBrush}" />
        <Setter Property="BackgroundColor" Value="{StaticResource SurfaceBrush}" />
    </Style>

    <!-- ImageButton -->
    <Style TargetType="ImageButton">
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="Opacity" Value="1" />
        <Setter Property="BorderWidth" Value="0" />
    </Style>

    <!-- Label -->
    <Style TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource OnSurfaceBrush}" />
        <Setter Property="FontFamily" Value="OpenSansRegular" />
        <Setter Property="FontSize" Value="14" />
    </Style>

    <!-- Picker -->
    <Style TargetType="Picker">
        <Setter Property="TextColor" Value="{StaticResource OnSurfaceBrush}" />
        <Setter Property="BackgroundColor" Value="{StaticResource SurfaceBrush}" />
        <Setter Property="TitleColor" Value="{StaticResource SecondaryBrush}" />
        <Setter Property="FontSize" Value="14" />
    </Style>

    <!-- Switch -->
    <Style TargetType="Switch">
        <Setter Property="OnColor" Value="{StaticResource PrimaryBrush}" />
        <Setter Property="ThumbColor" Value="{StaticResource TertiaryBrush}" />
    </Style>

    <!-- TimePicker -->
    <Style TargetType="TimePicker">
        <Setter Property="TextColor" Value="{StaticResource OnSurfaceBrush}" />
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="FontSize" Value="14" />
    </Style>

    <!-- Page -->
    <Style TargetType="Page" ApplyToDerivedTypes="True">
        <Setter Property="Padding" Value="0"/>
        <Setter Property="BackgroundColor" Value="{StaticResource SurfaceBrush}" />
    </Style>

    <!-- Shell -->
    <Style TargetType="Shell" ApplyToDerivedTypes="True">
        <Setter Property="Shell.BackgroundColor" Value="{StaticResource SurfaceBrush}" />
        <Setter Property="Shell.ForegroundColor" Value="{StaticResource OnSurfaceBrush}" />
        <Setter Property="Shell.TitleColor" Value="{StaticResource OnSurfaceBrush}" />
        <Setter Property="Shell.NavBarHasShadow" Value="False" />
    </Style>

</ResourceDictionary>
