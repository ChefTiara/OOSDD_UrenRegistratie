<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Hourregistration.App.Views.MainPage"
             xmlns:ContentView="clr-namespace:Hourregistration.App.Views"
             Title="MainPage">
    
    <ContentPage.MenuBarItems>
        <MenuBarItem Text="Pages">
            <MenuFlyoutItem Text="DeclaratiePage"
                 Clicked="OnDeclaratiePageClicked"/>
        </MenuBarItem>
    </ContentPage.MenuBarItems>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <ContentView:Header Grid.Row="0" Style="{StaticResource Header}"/>
        <ContentView Grid.Row="1" x:Name="Subpage" Style="{StaticResource Content}"/>
        <ContentView:Footer Grid.Row="2" Style="{StaticResource Footer}"/>
    </Grid>
</ContentPage>