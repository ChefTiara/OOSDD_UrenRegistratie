<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- ========================================================= -->
    <!--                  GLOBAL BASE STYLES                      -->
    <!-- ========================================================= -->

    <!-- ActivityIndicator -->
    <Style TargetType="ActivityIndicator">
        <Setter Property="Color" Value="{StaticResource PrimaryBrush}" />
    </Style>

    <!-- Border -->
    <Style TargetType="Border">
        <Setter Property="Stroke" Value="{StaticResource OutlineBrush}" />
        <Setter Property="StrokeThickness" Value="1" />
        <Setter Property="StrokeShape" Value="Rectangle" />
        <Setter Property="BackgroundColor" Value="{StaticResource SurfaceBrush}" />
    </Style>

    <!-- BoxView -->
    <Style TargetType="BoxView">
        <Setter Property="BackgroundColor" Value="{StaticResource SurfaceBrush}" />
    </Style>

    <!-- ========================================================= -->
    <!--                        BUTTONS                           -->
    <!-- ========================================================= -->

    <!-- Implicit primary button -->
    <Style TargetType="Button">
        <Setter Property="FontFamily" Value="OpenSansRegular" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="CornerRadius" Value="6" />
        <Setter Property="Padding" Value="14,10" />
        <Setter Property="MinimumHeightRequest" Value="45" />
        <Setter Property="MinimumWidthRequest" Value="44" />

        <Setter Property="BackgroundColor" Value="{StaticResource PrimaryBrush}" />
        <Setter Property="TextColor" Value="{StaticResource OnSurfaceDark}" />

        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup>
                    <VisualState x:Name="Normal" />

                    <VisualState x:Name="Disabled">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor"
                                    Value="{StaticResource DisabledBrush}" />
                            <Setter Property="TextColor"
                                    Value="{StaticResource OnSurfaceBrush}" />
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

    <!-- Secondary / subtle -->
    <Style x:Key="ButtonLight"
           TargetType="Button">
        <Setter Property="BackgroundColor"
                Value="{StaticResource TertiaryBrush}" />
        <Setter Property="TextColor"
                Value="{StaticResource OnSurfaceBrush}" />
    </Style>

    <Style x:Key="ButtonMid"
       TargetType="Button">
        <Setter Property="BackgroundColor"
            Value="{StaticResource PrimaryBrush}" />
        <Setter Property="TextColor"
            Value="{StaticResource OnSurfaceDark}" />
    </Style>

    <Style x:Key="ButtonDark"
       TargetType="Button">
        <Setter Property="BackgroundColor"
            Value="{StaticResource SecondaryBrush}" />
        <Setter Property="TextColor"
            Value="{StaticResource OnSurfaceDark}" />
    </Style>

    <!-- ========================================================= -->
    <!--                      INPUTS                              -->
    <!-- ========================================================= -->

    <Style TargetType="Entry">
        <Setter Property="TextColor"
            Value="{AppThemeBinding Light={StaticResource OnSurface},
                                      Dark={StaticResource OnSurfaceDark}}" />
        <Setter Property="BackgroundColor" Value="{StaticResource SurfaceBrush}" />
        <Setter Property="PlaceholderColor"
            Value="{AppThemeBinding Light={StaticResource Disabled},
                                      Dark={StaticResource DisabledDark}}" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="HeightRequest" Value="44" />
    </Style>

    <Style TargetType="Editor">
        <Setter Property="TextColor" Value="{StaticResource OnSurfaceBrush}" />
        <Setter Property="BackgroundColor" Value="{StaticResource SurfaceBrush}" />
        <Setter Property="PlaceholderColor" Value="{StaticResource DisabledBrush}" />
        <Setter Property="FontSize" Value="14" />
    </Style>

    <Style TargetType="Picker">
        <Setter Property="TextColor"
            Value="{AppThemeBinding Light={StaticResource OnSurface},
                                      Dark={StaticResource OnSurfaceDark}}" />
        <Setter Property="TitleColor"
            Value="{AppThemeBinding Light={StaticResource Disabled},
                                      Dark={StaticResource DisabledDark}}" />
        <Setter Property="BackgroundColor" Value="{StaticResource SurfaceBrush}" />
        <Setter Property="FontSize" Value="14" />
    </Style>

    <Style TargetType="DatePicker">
        <Setter Property="TextColor" Value="{StaticResource OnSurfaceBrush}" />
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="MinimumHeightRequest" Value="44" />
    </Style>

    <Style TargetType="TimePicker">
        <Setter Property="TextColor" Value="{StaticResource OnSurfaceBrush}" />
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="FontSize" Value="14" />
    </Style>

    <!-- ========================================================= -->
    <!--                       TEXT                               -->
    <!-- ========================================================= -->

    <Style TargetType="Label">
        <Setter Property="TextColor"
            Value="{AppThemeBinding Light={StaticResource OnSurface},
                                      Dark={StaticResource OnSurfaceDark}}" />
        <Setter Property="FontFamily" Value="OpenSansRegular" />
        <Setter Property="FontSize" Value="14" />
    </Style>

    <!-- ========================================================= -->
    <!--                      TOGGLES                             -->
    <!-- ========================================================= -->

    <Style TargetType="CheckBox">
        <Setter Property="Color" Value="{StaticResource PrimaryBrush}" />
    </Style>

    <Style TargetType="Switch">
        <Setter Property="OnColor" Value="{StaticResource PrimaryBrush}" />
        <Setter Property="ThumbColor" Value="{StaticResource SurfaceBrush}" />
    </Style>

    <!-- ========================================================= -->
    <!--                 PAGE / SHELL                             -->
    <!-- ========================================================= -->

    <Style TargetType="Page" ApplyToDerivedTypes="True">
        <Setter Property="Padding" Value="0" />
        <Setter Property="BackgroundColor"
                Value="{StaticResource BackgroundBrush}" />
    </Style>

    <Style TargetType="Shell" ApplyToDerivedTypes="True">
        <Setter Property="Shell.BackgroundColor"
                Value="{StaticResource BackgroundBrush}" />
        <Setter Property="Shell.ForegroundColor"
                Value="{StaticResource OnSurfaceBrush}" />
        <Setter Property="Shell.TitleColor"
                Value="{StaticResource OnSurfaceBrush}" />
        <Setter Property="Shell.NavBarHasShadow"
                Value="False" />
    </Style>

</ResourceDictionary>
